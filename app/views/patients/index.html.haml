.page-header
  %h1 Your Registered Patients

.add_new_patient_form
  = link_to "Add a new patient", doctor_patients_path(@doctor), method: :post, class: "btn btn-small btn-primary"
.patients
  - if @patients.empty?
    %p
      %span.label.label-important You have no patients yet.
  - else
    %table.table
      %caption
      %thead
        %tr
          %th Created on
          %th Identifier
          %th
      %tbody
        - @patients.each do |patient|
          %tr
            %td= patient.created_at.to_s(:long)
            %td= patient.identifier
            %td= link_to "View patient report", doctor_patient_path(@doctor, patient)

