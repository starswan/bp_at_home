= simple_form_for @feedback, :html => { :class => 'form-horizontal' } do |f|
  = f.text_area :text, rows: 10, style: 'width:100%'
  .form-actions
    = f.button :submit, 'Send Feedback', :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), current_patient, :class => 'btn'
